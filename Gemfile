source 'https://rubygems.org'

gem 'rack'
gem 'rack-contrib'
gem 'rake'
gem 'sinatra'
gem 'json'
gem 'sshkey'
gem "rackup", "~> 2.2"
gem "puma", "~> 6.6"
gem 'httparty'

group :development, :test do
  gem "rerun"
end

group :test do
  gem 'rspec'
  gem 'minitest'
  gem 'rack-test'
  gem 'mocha', require: false
  gem 'webmock'
  gem 'simplecov', require: false
end

group :development do
  gem 'pry'
  gem 'pry-byebug'
end

gem 'dotenv'
